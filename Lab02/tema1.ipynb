import matplotlib.pyplot as plt

def plot_s(s, title):
    plt.hist(s, bins=int(abs((max(s) - min(s)))), alpha = 0.7, color = 'lightblue', edgecolor='black')
    plt.title(title)
    plt.xlabel('Suma S($)')
